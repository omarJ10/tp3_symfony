{# templates/author/showAuthor.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Details de l'Auteur{% endblock %}

{% block body %}
    <h1>Détails de l'Auteur</h1>

    <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="200">
    <h2>{{ author.username }}</h2>
    <p>Email: {{ author.email }}</p>
    <p>Nombre de livres: {{ author.nb_books }}</p>

    <a href="{{ path('list_authors') }}">Retour à la liste</a>
{% endblock %}
